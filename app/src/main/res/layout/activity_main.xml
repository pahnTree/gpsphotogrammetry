<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Location"
        android:id="@+id/btnShowLocation"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/externalGPSCheckBox"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use external GPS?"
        android:id="@+id/externalGPSCheckBox"
        android:checked="false"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnShowLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Coordinates"
        android:id="@+id/GPSCoord"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angles"
        android:id="@+id/PhoneAngles"
        android:layout_alignTop="@+id/GPSCoord"
        android:layout_toStartOf="@+id/btnCancel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:id="@+id/latitudeDegText"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:id="@+id/longitudeDegText"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/latitudeDegText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azimuth"
        android:id="@+id/azimuthText"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:id="@+id/pitchText"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/azimuthText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll"
        android:id="@+id/rollText"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/pitchText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latitude"
        android:id="@+id/textView"
        android:layout_above="@+id/latitudeDegText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Longitude"
        android:id="@+id/textView2"
        android:layout_below="@+id/latitudeDegText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Azimuth"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/PhoneAngles" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pitch"
        android:id="@+id/textView4"
        android:layout_below="@+id/azimuthText"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Roll"
        android:id="@+id/textView5"
        android:layout_below="@+id/pitchText"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Altitude"
        android:id="@+id/textView6"
        android:layout_below="@+id/rollText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude"
        android:id="@+id/altitudeText"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/longitudeDegText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_below="@+id/btnShowLocation"
        android:layout_alignEnd="@+id/btnShowLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not running"
        android:id="@+id/runningText"
        android:layout_alignBottom="@+id/btnCancel"
        android:layout_alignStart="@+id/externalGPSCheckBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last GPS Update:"
        android:id="@+id/textView7"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastUpdateTimeText"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Speed"
        android:id="@+id/textView8"
        android:layout_below="@+id/altitudeText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:id="@+id/speedText"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/altitudeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat Deg Min Sec"
        android:id="@+id/latitudeMinSecText"
        android:layout_below="@+id/latitudeDegText"
        android:layout_alignStart="@+id/latitudeDegText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lon Deg Min Sec"
        android:id="@+id/longitudeMinSecText"
        android:layout_below="@+id/longitudeDegText"
        android:layout_alignStart="@+id/longitudeDegText" />
</RelativeLayout>
